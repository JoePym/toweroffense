@font-face{
  font-family: oldLondon;
  src: url('Sansation_Light.ttf'), url('Sansation_Light.eot'); /* IE9 */
}

body{
  background-color: black;
  background-image: url(<%= asset_path 'logo.png' %>);
  background-repeat: no-repeat;
  text-align:center;
}
#wrapper{
  margin: auto;
  width: 600px;
  #container{
    position: relative;
    background-color: black;
    width: 100%;
    height: 100%;
    text-align:center;
    #map{
      float: left;
      height: 600px;
      margin-top: 20px;
      display: inline-block;
      text-align: center;
      .images{
        display: none;
      }
    }
    .buttons{
      width: 100%;
      float: left;
      .legendarySpell{
        height: 30px;
        padding: 10px;
        background-color: white;
        width: 30px;
        font-size: 29px;
        text-align: center;
        display: block;
        float: left;
        position: relative;
        border: 5px solid black;
        .block{
          position: absolute;
          top: 0;
          left: 0;
          height: 50px;
          width: 50px;
          background-color: black;
        }
      }
      .power,.health, .shield{
        display: block;
        float: left;
        width: 50px;
        text-align: center;
        font-size: 29px;
        height: 40px;
        padding-top: 7px;
        padding-bottom: 7px;
        font-weight: bold;
        background-color: white;
      }
      .power{
        color: blue;
        border: solid black 5px
      }
      .health{
        color: red;
        border: solid black 5px
      }
      .shield{
        color: green;
        border: solid black 5px
      }
      a#move, a.normalSpell{
        background-color: white;
        display: block;
        float: left;
        width: 50px;
        border: 5px solid black;
      }
    }
    #map.move{
      cursor: pointer;
    }
    #map.spell{

    }
  }
}
.clear{
  clear:both;
}