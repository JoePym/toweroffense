#container
  .buttonColumn
    .buttons
      .health
        100
      .power
        100
      .shield
        0
      = link_to image_tag('move.png'), "#", :id => "move"
      - @player.cards.each do |card|
        - if card.legendary?
          = link_to image_tag(card.image), "#", :id => "card_#{card.id}", :class => "spell", :style => "display:none"
        - else
          = link_to image_tag(card.image), "#", :id => "card_#{card.id}", :class => "spell"
  #map
    .images
      = image_tag "stone-1.png"
      = image_tag "dirt.png"
      = image_tag "wizard.png"
      = image_tag "destruction.png"
    %canvas